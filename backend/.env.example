# Server Configuration (Optional - defaults provided)
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration (REQUIRED - no defaults for security)
# All database values must be explicitly provided
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=laundry_app

# JWT Configuration
# JWT_SECRET is REQUIRED - no default for security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Optional - defaults to 15m and 7d if not specified
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Bcrypt Configuration (Optional - defaults to 12)
BCRYPT_ROUNDS=12
