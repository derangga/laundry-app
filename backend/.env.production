# Production Environment Configuration
# WARNING: Change all CHANGE_ME values before deploying to production!

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database Configuration (REQUIRED - change values)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=laundry_app_prod
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_NAME=laundry_app_prod

# Database Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000

# JWT Configuration (REQUIRED - change values)
# Generate strong secret: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_VERY_STRONG_SECRET_AT_LEAST_32_CHARS
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
RATE_LIMIT_SKIP_ADMIN=true
MAX_BODY_SIZE=4194304
MAX_JSON_DEPTH=10
