{
  "name": "@laundry-app/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "start": "bun dist/main.js",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "migrate:up": "bun migrations/index.ts up",
    "migrate:down": "bun migrations/index.ts down"
  },
  "dependencies": {
    "@effect/experimental": "^0.58.0",
    "@effect/platform": "^0.72.2",
    "@effect/platform-bun": "^0.53.1",
    "@effect/sql": "^0.24.3",
    "@effect/sql-pg": "^0.24.4",
    "@node-rs/bcrypt": "^1.10.7",
    "effect": "^3.19.16",
    "jose": "^5.10.0"
  },
  "devDependencies": {
    "@effect/language-service": "^0.73.1",
    "@faker-js/faker": "^10.3.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^22.19.11",
    "bun-types": "^1.3.9",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
