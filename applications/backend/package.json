{
  "name": "@laundry-app/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "build": "bun build src/main.ts --outdir dist --target bun",
    "start": "bun dist/main.js",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "migrate": "bun run src/infrastructure/database/migrate.ts",
    "migrate:create": "bun run src/infrastructure/database/migrate-create.ts"
  },
  "dependencies": {
    "effect": "^3.19.16",
    "@effect/platform": "^0.72.2",
    "@effect/platform-bun": "^0.53.1",
    "@effect/schema": "^0.75.5",
    "@effect/sql": "^0.24.3",
    "@effect/sql-pg": "^0.24.0",
    "pg": "^8.18.0",
    "jose": "^5.10.0",
    "@node-rs/bcrypt": "^1.10.7"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22.19.10",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.9",
    "vitest": "^2.1.9",
    "@effect/vitest": "^0.15.0",
    "prettier": "^3.8.1"
  }
}
